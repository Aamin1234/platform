{
  "linters" : {
    "jshint" : {
      "type" : "jshint",
      "include" : "(\\.js$)",
      "exclude" : "@/libs/.*\\.js$@",
      "jshint.jshintrc" : ".jshintrc",
      "jshint.jshintignore" : ".jshintignore"
    },
    "phpcs" : {
      "type" : "phpcs",
      "include" : "(\\.php$)",
      "exclude" : "@^(application|modules|plugins|vendor)/.*@",
      "severity.rules" : {
        "(^PHPCS\\.E\\.)" : "warning",
        "(^PHPCS\\.W\\.)" : "advice"
      },
      "bin" : ["/usr/local/bin/phpcs", "bin/phpcs"],
      "flags" : [
        "--standard=PSR2",
        "--tab-width=4"
      ]
    }
  }
}
